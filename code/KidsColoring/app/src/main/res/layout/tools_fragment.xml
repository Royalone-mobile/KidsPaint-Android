<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/thin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thin" />

        <ImageView
            android:id="@+id/medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/medium" />

        <ImageView
            android:id="@+id/thick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thick" />

        <ImageView
            android:id="@+id/canvas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/canvas" />

        <ImageView
            android:id="@+id/eraseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rubber" />

        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/save" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@android:drawable/ic_menu_share" />

        <ImageView
            android:id="@+id/selectclip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/greyBrushButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brush_grey" />

        <ImageView
            android:id="@+id/blackBrushButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brush_black" />

        <ImageView
            android:id="@+id/redBrushButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brush_red" />

        <ImageView
            android:id="@+id/greenBrushButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brush_green" />

        <ImageView
            android:id="@+id/yellowBrushButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brush_yellow" />

        <ImageView
            android:id="@+id/blueBrushButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brush_blue" />

        <ImageView
            android:id="@+id/pinkBrushButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brush_pink" />

        <ImageView
            android:id="@+id/purpleBrushButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/brush_purple" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
    <!--    <ImageView
            android:id="@+id/fill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/thick" />
    -->
        <ImageView
            android:id="@+id/mandala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mandala" />
    </LinearLayout>
    
    </LinearLayout>

